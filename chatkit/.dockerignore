app = "knhomes-chatkit"

[build]
  image = "knhomes-chatkit:latest"

[processes]
  app = "uvicorn app.main:app --host 0.0.0.0 --port 8080 --proxy-headers --forwarded-allow-ips=*"

[env]

[experimental]

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0